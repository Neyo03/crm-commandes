{% if pageCount > 1 %}
	<ul
		class="pagination">
		{# {% if first is defined and current != first %}
							<li class="page-item first">
								<a class='page-link' href="{{ path(route, knp_pagination_query(query, first)) }}">&lt;&lt;</a>
							</li>
						{% endif %} #}

		{% if previous is defined %}
			<li class="page-item previous">
				<a class='page-link' rel="prev" href="{{ path(route, knp_pagination_query(query, previous)) }}">&lt;</a>
			</li>
		{% endif %}

		{% for page in pagesInRange %}
			{% if page != current %}
				<li class="page-item page">
					<a class='page-link' href="{{ path(route, knp_pagination_query(query, page)) }}">{{ page }}</a>
				</li>
			{% else %}
				<li class="page-item current">
					<a disabled class='page-link disabled' href="#">{{ page }}</a>
				</li>
			{% endif %}
		{% endfor %}

		{% if next is defined %}
			<li class="page-item next">
				<a class='page-link' rel="next" href="{{ path(route, knp_pagination_query(query, next)) }}">&gt;</a>
			</li>
		{% endif %}

		{# {% if last is defined and current != last %}
					<li class="page-item last">
						<a class='page-link' href="{{ path(route, knp_pagination_query(query, last)) }}">&gt;&gt;</a>
					</li>
				{% endif %} #}
	</ul>
{% endif %}
