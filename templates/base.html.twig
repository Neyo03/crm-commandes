<!DOCTYPE html>
<html lang="">
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>


		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.15.2/css/selectize.default.min.css" integrity="sha512-pTaEn+6gF1IeWv3W1+7X7eM60TFu/agjgoHmYhAfLEU8Phuf6JKiiE8YmsNC0aCgQv4192s4Vai8YZ6VNM6vyQ==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		{% endblock %}
		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}

	</head>
	<body>
		<div class="flash-messages position-absolute">
			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible shadow" role="alert" data-controller="flash-message" data-flash-message-timeout-value="5000">
						{{ message }}
						<button type="button" class="btn-close" data-action="flash-message#close"></button>
					</div>
				{% endfor %}
			{% endfor %}
		</div>

		<div class="d-flex align-items-start">
			{{ include('/components/header/nav/sidebar.html.twig') }}
			<div class='d-flex flex-column w-100'>
				{{ include('/components/header/nav/navbar.html.twig') }}
				{% block body %}{% endblock %}
			</div>
		</div>
	</body>
</html>
