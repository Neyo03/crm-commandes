{% extends 'base.html.twig' %}


{% block body %}
	{% set region_entity_name = 'REGION' %}
	{% set add_region_vars = 
		{ 
			'entity': region_entity_name, 
			'href': path('admin_app_form_new_region') , 
			'icon': '<i class="bi bi-diagram-2-fill button-icon"></i>', 
			'text': 'Créer une région' 
		} 
	%}
	<div class='p-3 pe-5 d-flex justify-content-between align-items-start'>
		{% set css = '' %}
		{% if app.request.attributes.get('_route') == 'admin_app_collection_regions' %}
			{% set css = 'btn disabled opacity-0' %}
		{% endif %}
		<a href='{{path('admin_app_collection_regions')}}' class='link-secondary link-underline-opacity-0 {{css}}'>
			<i class="bi bi-arrow-left me-1"></i>
			Retourner à la liste
		</a>

		{% include '/components/admin/button/admin_add_button.html.twig' with add_region_vars %}
	</div>
	<h4 class='ps-3 mb-3'>Région</h4>
	{% block region_content %}{% endblock %}
{% endblock %}
