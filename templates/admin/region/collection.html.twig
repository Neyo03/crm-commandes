{% extends 'base.html.twig' %}

{% block body %}

	{{ include('admin/region/_nav.html.twig') }}

	{{ knp_pagination_rel_links(pagination) }}

	<div class='p-3 pe-5 w-100 position-relative border-top div-border-dark'>
		<table class='table table-striped table-dark rounded table-hover'>
			<tr>
				{# sorting of properties based on query components #}
				<th>{{ knp_pagination_sortable(pagination, '#', 'e.id') }}</th>
				<th {% if pagination.isSorted('e.name') %} class="sorted" {% endif %}>
					{{ knp_pagination_sortable(pagination, 'Libell√©', 'e.name') }}
				</th>
				<th>
					Actions
				</th>
			</tr>

			{# table body #}
			{% for region in pagination %}
				<tr {% if loop.index is odd %} class="color" {% endif %}>
					<td>{{ region.id }}</td>
					<td>{{ region.name }}</td>
					<td>
						<twig:Dropdown>
							<twig:Link:NavLink icon_class="bi-pencil-fill" classOverride="dropdown-item"
											   route_name="admin_app_form_edit_region"
											   parameters="{{ {region: region.id} }}"
											   text="Modifier"/>
							<twig:Link:NavLink icon_class="bi-trash3-fill" classOverride="dropdown-item text-danger"
											   route_name="admin_app_delete_region"
											   parameters="{{ {region: region.id} }}"
											   text="Supprimer"/>
						</twig:Dropdown>
					</td>
				</tr>
			{% endfor %}
		</table>

		<div class="navigation d-flex justify-content-end">
			{{ knp_pagination_render(pagination) }}
		</div>
	</div>
{% endblock %}