{% extends 'base.html.twig' %}


{% block body %}
	{% set entity_name = 'RATTACHEMENT' %}
	{% set add_button_vars =
		{ 
			'entity': entity_name,
			'href': path('admin_app_form_new_rattachement') ,
			'icon': '<i class="bi bi-diagram-2-fill button-icon"></i>', 
			'text': 'Créer un rattachement'
		} 
	%}
	<div class='p-3 pe-5 d-flex justify-content-between align-items-start'>
		{% set css = '' %}
		{% if app.request.attributes.get('_route') == 'admin_app_collection_rattachements' %}
			{% set css = 'btn disabled opacity-0' %}
		{% endif %}
		<a href='{{path('admin_app_collection_rattachements')}}' class='link-secondary link-underline-opacity-0 {{css}}'>
			<i class="bi bi-arrow-left me-1"></i>
			Retourner à la liste
		</a>

		{% include '/components/admin/button/admin_add_button.html.twig' with add_button_vars %}
	</div>
	<h4 class='ps-3 mb-3'>Rattachement</h4>
	{% block content %}{% endblock %}
{% endblock %}
